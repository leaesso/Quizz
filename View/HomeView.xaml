<UserControl x:Class="Quizz.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="#F5F5F5">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TITRE -->
        <TextBlock Text="Bienvenue dans le Quiz"
                   FontSize="28"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0 20 0 20"/>
        

        <!-- BOUTONS DE DIFFICULTÉ -->
        <StackPanel Grid.Row="1"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Center"
                    Width="300"
                    Margin="0 40 0 0">

            <!-- Nom du joueur -->
            <TextBlock Text="Nom du joueur :" 
           FontSize="16"
           Margin="0 0 0 5"/>

            <TextBox x:Name="PlayerNameTextBox"
         Height="30"
         FontSize="16"
         Margin="0 0 0 20"/>


            <Button Content="Facile"
                    Margin="0 10"
                    Height="40"
                    Background="#C8E6C9"
                    Click="Easy_Click"/>

            <Button Content="Moyen"
                    Margin="0 10"
                    Height="40"
                    Background="#BBDEFB"
                    Click="Medium_Click"/>

            <Button Content="Difficile"
                    Margin="0 10"
                    Height="40"
                    Background="#FFCDD2"
                    Click="Hard_Click"/>

            <Button Content="Historique"
                    Margin="0 30"
                    Height="40"
                    Background="#E0E0E0"
                    Click="History_Click"/>
        </StackPanel>

    </Grid>
</UserControl>